{
  "name": "contract-prover",
    "version": "1.0.0",
    "author": "Michael Hanus <mh@informatik.uni-kiel.de>",
    "synopsis": "A tool to verify contracts in FlatCurry programs",
    "category": [ "Optimization", "Verification" ],
    "license": "BSD-3-Clause",
    "licenseFile": "LICENSE",
    "dependencies": {
        "contracts"          : ">= 0.0.1",
        "currypath"          : ">= 0.0.1",
        "finite-map"         : ">= 0.0.1",
        "flatcurry"          : ">= 1.0.0",
        "flatcurry-annotated": ">= 1.0.0",
        "showflatcurry"      : ">= 0.0.1",
        "wl-pprint"          : ">= 0.0.1"
    },
    "compilerCompatibility": {
        "pakcs": ">= 2.0.0, < 3.0.0",
        "kics2": ">= 2.0.0, < 3.0.0"
    },
    "configModule": "PackageConfig",
    "executable": {
        "name": "curry-contracts",
        "main": "ContractProver"
    },
    "testsuite": {
        "src-dir": "examples",
        "script": "test.sh",
        "options": "-v"
    },
    "source": {
        "git": "https://git.ps.informatik.uni-kiel.de/curry-packages/contract-prover.git",
        "tag": "$version"
    }
}
